<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.DashboardFragments.ProfileFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cProfileImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toBottomOf="@+id/cProfileImage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="7000000000"
        android:id="@+id/cPhoneNumber"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toBottomOf="@+id/cProfileImage"
        app:layout_constraintLeft_toRightOf="@+id/cPhoneNumber"
        android:text="Verify?"
        android:id="@+id/cPhoneVerify"
        />

</androidx.constraintlayout.widget.ConstraintLayout>