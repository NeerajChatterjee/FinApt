<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5.2dp"
        android:layout_marginTop="7.8dp"
        android:layout_marginEnd="5.2dp"
        android:background="@drawable/sender_msg_bg"
        android:maxWidth="325dp"
        android:maxHeight="455dp"
        android:minHeight="32.5dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/senderMsgDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.80dp"
            android:layout_marginBottom="3.90dp"
            android:layout_marginHorizontal="20.80dp"
            android:maxWidth="260dp"
            android:minWidth="52dp"
            tools:text="Oyee"
            app:layout_constraintBottom_toTopOf="@+id/senderTimeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/senderTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.80dp"
            android:layout_marginBottom="3.90dp"
            tools:text="10:40PM"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>